page, .main-cont{
  width:100%;
  height:100%;
}
.containter{
  display: flex;
  flex-direction: column;
  align-items: center; 
  width:750rpx;
  height: 500rpx;
  position: relative;
}
.oImage{
  width:730rpx;  
}
.oText{
  width: 20rem;
  font-size:36rpx;
  letter-spacing: 4rpx;
}
.oName{
  text-align: right;
}
.nameBox{
  text-align: right
}
.video1{
  width:700rpx;
  height: 700rpx;
}
.cover-box{
  position: relative;
  width: 700rpx;
  height:700rpx;
  position: absolute;

}
.cover-text{
  top:50%;
  left:50%;
  margin-left:-50rpx;
  margin-top: -50rpx;
  position: absolute;
  width:100rpx;
  height:100rpx;
  background-color: blueviolet;
 
}
.audio-cont{
  margin: 20rpx 25rpx;
  width:700rpx;
  height: auto;
  display: flex
}
.audio-cont .text-cont{
  width:20%;
}
.audio-cont .prog-cont{
  width:80%;
  display: flex;
  height:60rpx;
  flex-direction: column;
  justify-content: space-between;
}
.prog-cont .progress{
  width:100%;
  position: relative;
}
.prog-cont .point{
  position:absolute;
  left:0;
  top:-5rpx;
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  background-color: green;
}
.time-cont {
  font-size: 26rpx;
  color: gray;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between  
}